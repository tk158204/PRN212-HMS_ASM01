<Window x:Class="TranTuanKietWPF.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding DialogTitle}" Height="604" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="{Binding DialogTitle}" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <!-- Form -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Full Name:" Margin="0,5,0,0"/>
            <TextBox Text="{Binding Customer.CustomerFullName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource TextBoxStyle}"/>
            
            <TextBlock Text="Email:" Margin="0,5,0,0"/>
            <TextBox Text="{Binding Customer.EmailAddress, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource TextBoxStyle}"/>
            
            <TextBlock Text="Phone:" Margin="0,5,0,0"/>
            <TextBox Text="{Binding Customer.Telephone, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource TextBoxStyle}"/>
            
            <TextBlock Text="Birthday:" Margin="0,5,0,0"/>
            <DatePicker SelectedDate="{Binding Customer.CustomerBirthday}" Margin="0,5,0,10" Height="30"/>
            
            <TextBlock Text="Password:" Margin="0,5,0,0"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,10" Height="30" Padding="5,3"/>
            
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" Margin="0,10"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" CommandParameter="{Binding ElementName=txtPassword}" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window> 