<Window x:Class="TranTuanKietWPF.CustomerProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:TranTuanKietWPF.Converters"
        xmlns:views="clr-namespace:TranTuanKietWPF.Views"
        Title="Customer Profile - FU Mini Hotel System" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#3498db"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Foreground" Value="#3498db"/>
            <Setter Property="BorderBrush" Value="#3498db"/>
        </Style>
        
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="Margin" Value="0,5"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498db"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Padding="20,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#3498db" Offset="0"/>
                    <GradientStop Color="#2980b9" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Customer Profile" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding CurrentCustomer.CustomerFullName}" FontSize="14" Foreground="#ffffffcc" Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" Content="Logout" Width="100" Command="{Binding LogoutCommand}" Style="{StaticResource ActionButtonStyle}">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#e74c3c" Offset="0"/>
                            <GradientStop Color="#c0392b" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Tabs -->
            <Border Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#eee">
                <StackPanel Orientation="Horizontal" Margin="20,0">
                    <Button Content="Profile" Command="{Binding SelectTabCommand}" CommandParameter="Profile">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Profile">
                                        <Setter Property="Foreground" Value="#3498db"/>
                                        <Setter Property="BorderBrush" Value="#3498db"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Change Password" Command="{Binding SelectTabCommand}" CommandParameter="Password">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="Password">
                                        <Setter Property="Foreground" Value="#3498db"/>
                                        <Setter Property="BorderBrush" Value="#3498db"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Book a Room" Command="{Binding SelectTabCommand}" CommandParameter="BookRoom">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="BookRoom">
                                        <Setter Property="Foreground" Value="#3498db"/>
                                        <Setter Property="BorderBrush" Value="#3498db"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Booking History" Command="{Binding SelectTabCommand}" CommandParameter="BookingHistory">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="BookingHistory">
                                        <Setter Property="Foreground" Value="#3498db"/>
                                        <Setter Property="BorderBrush" Value="#3498db"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,3"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
            
            <!-- Tab Content -->
            <Border Grid.Row="1" Background="#f8f9fa">
                <TabControl SelectedIndex="{Binding SelectedTab, Converter={StaticResource StringToTabIndexConverter}, ConverterParameter='Profile;Password;BookRoom;BookingHistory'}"
                            BorderThickness="0" Background="Transparent">
                    <!-- Profile Tab -->
                    <TabItem Header="Profile" Visibility="Collapsed">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Personal Information" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                            
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Full Name:" VerticalAlignment="Center" Margin="0,10"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBoxStyle}" Text="{Binding CurrentCustomer.CustomerFullName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,20,5"/>
                                
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Email:" VerticalAlignment="Center" Margin="0,10"/>
                                <TextBox Grid.Row="0" Grid.Column="3" Style="{StaticResource TextBoxStyle}" Text="{Binding CurrentCustomer.EmailAddress, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Phone:" VerticalAlignment="Center" Margin="0,10"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBoxStyle}" Text="{Binding CurrentCustomer.Telephone, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,20,5"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="2" Text="Birthday:" VerticalAlignment="Center" Margin="0,10"/>
                                <DatePicker Grid.Row="1" Grid.Column="3" SelectedDate="{Binding CurrentCustomer.CustomerBirthday}" Margin="0,5" Padding="5" BorderThickness="1" BorderBrush="#ddd"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Text="{Binding ErrorMessage}" Foreground="#e74c3c" TextWrapping="Wrap" Margin="0,20"/>
                            </Grid>
                            
                            <Button Grid.Row="2" Content="Update Profile" Width="150" HorizontalAlignment="Left" Command="{Binding UpdateProfileCommand}" Style="{StaticResource ActionButtonStyle}"/>
                        </Grid>
                    </TabItem>
                    
                    <!-- Change Password Tab -->
                    <TabItem Header="Change Password" Visibility="Collapsed">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Change Password" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                            
                            <Grid Grid.Row="1" MaxWidth="500">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="New Password:" VerticalAlignment="Center" Margin="0,10"/>
                                <PasswordBox x:Name="txtNewPassword" Grid.Row="0" Grid.Column="1" Margin="0,5" Padding="10,8" BorderThickness="1" BorderBrush="#ddd"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Confirm Password:" VerticalAlignment="Center" Margin="0,10"/>
                                <PasswordBox x:Name="txtConfirmPassword" Grid.Row="1" Grid.Column="1" Margin="0,5" Padding="10,8" BorderThickness="1" BorderBrush="#ddd"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding ErrorMessage}" Foreground="#e74c3c" TextWrapping="Wrap" Margin="0,20"/>
                            </Grid>
                            
                            <Button Grid.Row="2" Content="Change Password" Width="180" HorizontalAlignment="Left" Style="{StaticResource ActionButtonStyle}">
                                <Button.CommandParameter>
                                    <MultiBinding Converter="{StaticResource ArrayMultiConverter}">
                                        <Binding ElementName="txtNewPassword"/>
                                        <Binding ElementName="txtConfirmPassword"/>
                                    </MultiBinding>
                                </Button.CommandParameter>
                                <Button.Command>
                                    <Binding Path="ChangePasswordCommand"/>
                                </Button.Command>
                            </Button>
                        </Grid>
                    </TabItem>
                    
                    <!-- Book a Room Tab -->
                    <TabItem Header="Book a Room" Visibility="Collapsed">
                        <views:CustomerBookingView />
                    </TabItem>
                    
                    <!-- Booking History Tab -->
                    <TabItem Header="Booking History" Visibility="Collapsed">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Your Booking History" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
                            
                            <DataGrid Grid.Row="1" ItemsSource="{Binding BookingHistory}" 
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True"
                                      BorderThickness="1"
                                      BorderBrush="#ddd"
                                      Background="White"
                                      RowBackground="White"
                                      AlternatingRowBackground="#f8f9fa"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#f1f2f6"/>
                                        <Setter Property="Foreground" Value="#333"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#ddd"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Padding" Value="10,5"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding BookingReservationID}" Width="50"/>
                                    <DataGridTextColumn Header="Room" Binding="{Binding Room.RoomNumber}" Width="80"/>
                                    <DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="100"/>
                                    <DataGridTextColumn Header="Check-in" Binding="{Binding StartDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="100"/>
                                    <DataGridTextColumn Header="Check-out" Binding="{Binding EndDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="100"/>
                                    <DataGridTextColumn Header="Duration" Binding="{Binding BookingDuration}" Width="70"/>
                                    <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat=\{0:C\}}" Width="100"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding BookingType, Converter={StaticResource BookingTypeConverter}}" Width="80"/>
                                    <DataGridTemplateColumn Header="Status" Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="4" Padding="5,2" HorizontalAlignment="Left">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding BookingStatus}" Value="1">
                                                                    <Setter Property="Background" Value="#2ecc7133"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding BookingStatus}" Value="2">
                                                                    <Setter Property="Background" Value="#3498db33"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding BookingStatus}" Value="3">
                                                                    <Setter Property="Background" Value="#e74c3c33"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding BookingStatus, Converter={StaticResource BookingStatusConverter}}">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding BookingStatus}" Value="1">
                                                                        <Setter Property="Foreground" Value="#27ae60"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding BookingStatus}" Value="2">
                                                                        <Setter Property="Foreground" Value="#2980b9"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding BookingStatus}" Value="3">
                                                                        <Setter Property="Foreground" Value="#c0392b"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Window>