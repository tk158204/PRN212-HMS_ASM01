<UserControl x:Class="TranTuanKietWPF.Views.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:TranTuanKietWPF.ViewModels">
    
    <UserControl.DataContext>
        <viewmodels:ReportViewModel />
    </UserControl.DataContext>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Style="{StaticResource CardStyle}"
                Margin="0,0,0,20">
            <StackPanel Margin="20">
                <Label Content="Reports &amp; Analytics" 
                     Style="{StaticResource HeadingLabel}"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,10"/>
                <Label Content="View hotel performance metrics and generate reports" 
                     Style="{StaticResource ModernLabel}"
                     Foreground="{StaticResource DarkGrayColor}"
                     HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Filter Controls -->
        <Border Grid.Row="1" 
                Style="{StaticResource CardStyle}"
                Margin="0,0,0,20">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Date Range -->
                <StackPanel Grid.Column="0" 
                          Margin="0,0,20,0">
                    <Label Content="Start Date:" 
                         Style="{StaticResource ModernLabel}"
                         FontWeight="SemiBold"
                         Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding StartDate}" 
                              Margin="0,0,0,10"/>
                </StackPanel>

                <StackPanel Grid.Column="1" 
                          Margin="0,0,20,0">
                    <Label Content="End Date:" 
                         Style="{StaticResource ModernLabel}"
                         FontWeight="SemiBold"
                         Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding EndDate}" 
                              Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Generate Button -->
                <Button Grid.Column="2" 
                      Content="Generate Report" 
                      Style="{StaticResource ModernButton}"
                      Command="{Binding GenerateReportCommand}"
                      VerticalAlignment="Bottom"
                      Margin="0,0,0,10"/>
            </Grid>
        </Border>

        <!-- Report Content -->
        <Border Grid.Row="2" 
                Style="{StaticResource CardStyle}"
                Visibility="{Binding HasReport, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Report Header -->
                <Border Grid.Row="0" 
                      Background="{StaticResource PrimaryColor}"
                      CornerRadius="4,4,0,0"
                      Padding="15,10"
                      Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                 Text="Hotel Performance Report" 
                                 FontWeight="Bold" 
                                 Foreground="White"
                                 FontSize="16"/>
                        <TextBlock Grid.Column="1" 
                                 Text="{Binding ReportPeriod}" 
                                 FontWeight="Bold" 
                                 Foreground="White"/>
                    </Grid>
                </Border>

                <!-- Statistics Cards -->
                <WrapPanel Grid.Row="1" Margin="0,0,0,20">
                    <Border Style="{StaticResource CardStyle}" 
                          Width="200" 
                          Height="120" 
                          Margin="0,0,20,0">
                        <StackPanel Margin="20">
                            <TextBlock Text="Total Bookings" 
                                     FontSize="14" 
                                     Foreground="{StaticResource DarkGrayColor}"
                                     Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding TotalBookings}" 
                                     FontSize="32" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource PrimaryColor}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource CardStyle}" 
                          Width="200" 
                          Height="120" 
                          Margin="0,0,20,0">
                        <StackPanel Margin="20">
                            <TextBlock Text="Total Revenue" 
                                     FontSize="14" 
                                     Foreground="{StaticResource DarkGrayColor}"
                                     Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding TotalRevenue, StringFormat='{}{0:C}'}" 
                                     FontSize="32" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource SuccessColor}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource CardStyle}" 
                          Width="200" 
                          Height="120" 
                          Margin="0,0,20,0">
                        <StackPanel Margin="20">
                            <TextBlock Text="Average Stay" 
                                     FontSize="14" 
                                     Foreground="{StaticResource DarkGrayColor}"
                                     Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding AverageStay, StringFormat='{}{0:F1} days'}" 
                                     FontSize="32" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource WarningColor}"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource CardStyle}" 
                          Width="200" 
                          Height="120" 
                          Margin="0,0,20,0">
                        <StackPanel Margin="20">
                            <TextBlock Text="Occupancy Rate" 
                                     FontSize="14" 
                                     Foreground="{StaticResource DarkGrayColor}"
                                     Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding OccupancyRate, StringFormat='{}{0:F1}%'}" 
                                     FontSize="32" 
                                     FontWeight="Bold" 
                                     Foreground="{StaticResource InfoColor}"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- Detailed Report -->
                <Border Grid.Row="1" 
                      Style="{StaticResource CardStyle}"
                      Margin="0,20,0,0">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <TextBlock Grid.Row="0" 
                                 Text="Booking Details" 
                                 FontSize="18" 
                                 FontWeight="Bold" 
                                 Foreground="{StaticResource PrimaryColor}"
                                 Margin="0,0,0,15"/>

                        <!-- Booking DataGrid -->
                        <DataGrid Grid.Row="1" 
                                ItemsSource="{Binding BookingDetails}"
                                Style="{StaticResource ModernDataGrid}"
                                AutoGenerateColumns="False"
                                IsReadOnly="True"
                                MaxHeight="300">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ModernDataGridColumnHeader}"/>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=\{0:dd/MM/yyyy\}}" Width="100"/>
                                <DataGridTextColumn Header="Bookings" Binding="{Binding Bookings}" Width="100"/>
                                <DataGridTextColumn Header="Revenue" Binding="{Binding Revenue, StringFormat=\{0:C\}}" Width="120"/>
                                <DataGridTextColumn Header="Average Price" Binding="{Binding AveragePrice, StringFormat=\{0:C\}}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- No Report Message -->
        <Border Grid.Row="2" 
                Style="{StaticResource CardStyle}"
                Visibility="{Binding NoReport, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Margin="20" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center">
                <TextBlock Text="Select a date range and generate a report" 
                         FontSize="16" 
                         Foreground="{StaticResource DarkGrayColor}"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,10"/>
                <TextBlock Text="Choose your desired period to view hotel performance metrics" 
                         FontSize="14" 
                         Foreground="{StaticResource DarkGrayColor}"
                         HorizontalAlignment="Center"
                         TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl> 