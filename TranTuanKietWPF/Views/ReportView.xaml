<UserControl x:Class="TranTuanKietWPF.Views.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:TranTuanKietWPF.ViewModels">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Style="{StaticResource CardStyle}"
                Margin="0,0,0,20">
            <StackPanel Margin="20">
                <Label Content="Reports &amp; Analytics" 
                     Style="{StaticResource HeadingLabel}"
                     HorizontalAlignment="Center"
                     Margin="0,0,0,10"/>
                <Label Content="View hotel performance metrics and generate comprehensive reports" 
                     Style="{StaticResource ModernLabel}"
                     Foreground="{StaticResource DarkGrayColor}"
                     HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Filter Controls -->
        <Border Grid.Row="1" 
                Style="{StaticResource CardStyle}"
                Margin="0,0,0,20">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Report Type -->
                <StackPanel Grid.Column="0" 
                          Margin="0,0,20,0">
                    <Label Content="Report Type:" 
                         Style="{StaticResource ModernLabel}"
                         FontWeight="SemiBold"
                         Margin="0,0,0,5"/>
                    <ComboBox SelectedValue="{Binding SelectedReportType}" 
                             Margin="0,0,0,10">
                        <ComboBoxItem Content="Revenue"/>
                        <ComboBoxItem Content="Bookings"/>
                        <ComboBoxItem Content="Rooms"/>
                        <ComboBoxItem Content="Customers"/>
                    </ComboBox>
                </StackPanel>

                <!-- Date Range -->
                <StackPanel Grid.Column="1" 
                          Margin="0,0,20,0">
                    <Label Content="Start Date:" 
                         Style="{StaticResource ModernLabel}"
                         FontWeight="SemiBold"
                         Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding StartDate}" 
                              Margin="0,0,0,10"/>
                </StackPanel>

                <StackPanel Grid.Column="2" 
                          Margin="0,0,20,0">
                    <Label Content="End Date:" 
                         Style="{StaticResource ModernLabel}"
                         FontWeight="SemiBold"
                         Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding EndDate}" 
                              Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Generate Button -->
                <Button Grid.Column="3" 
                      Content="Generate Report" 
                      Style="{StaticResource ModernButton}"
                      Command="{Binding GenerateReportCommand}"
                      VerticalAlignment="Bottom"
                      Margin="0,0,0,10"/>
            </Grid>
        </Border>

        <!-- Quick Report Buttons -->
        <Border Grid.Row="2" 
                Style="{StaticResource CardStyle}"
                Margin="0,0,0,20">
            <StackPanel Margin="20">
                <Label Content="Quick Reports:" 
                     Style="{StaticResource ModernLabel}"
                     FontWeight="SemiBold"
                     Margin="0,0,0,10"/>
                <WrapPanel>
                    <Button Content="Revenue Report" 
                          Style="{StaticResource SecondaryButton}"
                          Command="{Binding RevenueReportCommand}"
                          Margin="0,0,10,0"/>
                    <Button Content="Booking Report" 
                          Style="{StaticResource SecondaryButton}"
                          Command="{Binding BookingReportCommand}"
                          Margin="0,0,10,0"/>
                    <Button Content="Room Report" 
                          Style="{StaticResource SecondaryButton}"
                          Command="{Binding RoomReportCommand}"
                          Margin="0,0,10,0"/>
                    <Button Content="Customer Report" 
                          Style="{StaticResource SecondaryButton}"
                          Command="{Binding CustomerReportCommand}"
                          Margin="0,0,10,0"/>
                    <Button Content="Export Report" 
                          Style="{StaticResource SuccessButton}"
                          Command="{Binding ExportCommand}"
                          Margin="0,0,10,0"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Report Content -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Statistics Cards -->
            <Border Grid.Column="0" 
                  Style="{StaticResource CardStyle}"
                  Margin="0,0,10,0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                             Text="Key Metrics" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Foreground="{StaticResource PrimaryColor}"
                             Margin="0,0,0,15"/>

                    <WrapPanel Grid.Row="1">
                        <Border Style="{StaticResource CardStyle}" 
                              Width="180" 
                              Height="100" 
                              Margin="0,0,15,15">
                            <StackPanel Margin="15">
                                <TextBlock Text="Total Revenue" 
                                         FontSize="12" 
                                         Foreground="{StaticResource DarkGrayColor}"
                                         Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding TotalRevenue, StringFormat='{}{0:C}'}" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource SuccessColor}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" 
                              Width="180" 
                              Height="100" 
                              Margin="0,0,15,15">
                            <StackPanel Margin="15">
                                <TextBlock Text="Total Bookings" 
                                         FontSize="12" 
                                         Foreground="{StaticResource DarkGrayColor}"
                                         Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding TotalBookings}" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource PrimaryColor}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" 
                              Width="180" 
                              Height="100" 
                              Margin="0,0,15,15">
                            <StackPanel Margin="15">
                                <TextBlock Text="Active Bookings" 
                                         FontSize="12" 
                                         Foreground="{StaticResource DarkGrayColor}"
                                         Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding ActiveBookings}" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource InfoColor}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" 
                              Width="180" 
                              Height="100" 
                              Margin="0,0,15,15">
                            <StackPanel Margin="15">
                                <TextBlock Text="Completed" 
                                         FontSize="12" 
                                         Foreground="{StaticResource DarkGrayColor}"
                                         Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding CompletedBookings}" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource SuccessColor}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" 
                              Width="180" 
                              Height="100" 
                              Margin="0,0,15,15">
                            <StackPanel Margin="15">
                                <TextBlock Text="Online Bookings" 
                                         FontSize="12" 
                                         Foreground="{StaticResource DarkGrayColor}"
                                         Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding OnlineBookings}" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource WarningColor}"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" 
                              Width="180" 
                              Height="100" 
                              Margin="0,0,15,15">
                            <StackPanel Margin="15">
                                <TextBlock Text="Offline Bookings" 
                                         FontSize="12" 
                                         Foreground="{StaticResource DarkGrayColor}"
                                         Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding OfflineBookings}" 
                                         FontSize="24" 
                                         FontWeight="Bold" 
                                         Foreground="{StaticResource AccentColor}"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </Grid>
            </Border>

            <!-- Report Content -->
            <Border Grid.Column="1" 
                  Style="{StaticResource CardStyle}"
                  Margin="10,0,0,0">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                             Text="Report Details" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Foreground="{StaticResource PrimaryColor}"
                             Margin="0,0,0,15"/>

                    <ScrollViewer Grid.Row="1" 
                                VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding ReportContent}" 
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 TextWrapping="Wrap"
                                 Foreground="{StaticResource DarkGrayColor}"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl> 